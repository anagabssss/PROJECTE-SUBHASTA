def maquina ():
    a = "Amenida vegetal"
    b = "Pasta amb salsa bolonyesa"
    c = "Plat especial del dia "
    x = int(input(" Introdueix el numero corresponent al l'opció que desitja: "))
    if x == 1:
        print(a)
    elif x == 2: 
        print(b)
    elif x == 3:
        print(c)
    else :
        print ("ERROR")
