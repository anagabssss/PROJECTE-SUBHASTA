def multiplicar():
    x=int(input("Introdueix un nombre: "))
    y=10
    while y>=0:
        print (str(y)+" * "+str(x)+ " = "+str(y*x))
        y=y-1
##multiplicar()
###
def factorial ():
    x=int(input("Introdueix un nombre: "))
    f=1
    while x>0:
        f=x*f
        x=x-1
    print("el nombre factorial de " + str(x)+ " és " + str(f))
